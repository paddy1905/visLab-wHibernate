<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />
    <constant name="struts.custom.i18n.resources" value="ApplicationResources" /> 
    



    <!-- Add packages here -->
    
        <package name="vislabExample" extends="struts-default">
        
        <!-- Add your actions here  -->
        
        <action name="User_forward">
        	<result>/pages/Login.jsp</result>
        </action>
        
        <action name="User_login" class="vislabExample.controller.action.LoginAction">
            <result name="success">/pages/Home.jsp</result>
            <result name="input">/pages/Login.jsp</result>
        </action>
        
        <action name="register">
        	<result>/pages/Registry.jsp</result>
        </action>
        
         <action name="User_registred" class="vislabExample.controller.action.RegisterAction">
        	<result name="success">/pages/Home.jsp</result>
        	<result name="input">/pages/Registry.jsp</result>
        </action>
        
        <action name="openSearch" class ="vislabExample.controller.action.OpenSearchAction">
        	<result name ="success">/pages/Search.jsp</result>
        </action>
        
        <action name="openAdminArea" class ="vislabExample.controller.action.OpenAdminAreaAction">
       		<result>/pages/Adminbereich.jsp</result>
        </action>
        
         <action name="openAdminCat">
       		<result>/pages/AdminbereichKategorie.jsp</result>
        </action>
        
 
        
        
         <action name="openHome">
        	<result>/pages/Home.jsp</result>
        </action>
        
         <action name="openProduct" class ="vislabExample.controller.action.OpenSearchAction">
        	<result name ="success">/pages/Products.jsp</result>
        </action>
        
         <action name="logout">
        	<result>/pages/Login.jsp</result>
        </action>
        
        
        <action name ="Suchen" class = "vislabExample.controller.action.SearchAction">
        	<result name = "success">/pages/Search.jsp</result>
        </action>
        
        <action name ="edit" class = "vislabExample.controller.action.ShowProductWithKey">
        	<result name = "success">/pages/Adminbereich.jsp</result>
        </action>
        
        <action name="delete" class ="vislabExample.controller.action.DeleteProductAction">
        	<result name ="success">/pages/Adminbereich.jsp</result>
        </action>
        
         <action name="create" class ="vislabExample.controller.action.CreateProductAction">
        	<result name ="success">/pages/Adminbereich.jsp</result>
        </action>
        
    </package>
    

</struts>
