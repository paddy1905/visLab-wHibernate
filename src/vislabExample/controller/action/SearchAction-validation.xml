<!DOCTYPE validators PUBLIC
        "-//Apache Struts//XWork Validator 1.0.2//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">
<validators>
    <field name="priceMin">
        <field-validator type="regex">
       		<param name="regex">^\d+(.\d{1,2})?$</param>
       		<message>Overriden</message>
        </field-validator>
    </field>
    
      <field name="priceMax">
        <field-validator type="regex">
       		<param name="regex">^\d+(.\d{1,2})?$</param>
       		<message>Overriden</message>
        </field-validator>
    </field>
</validators>
